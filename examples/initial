// A module to collect xxx coverage
module xxx (foo [10:0], bar [19:0], baz [1:0], qux) {
   trigger florbl;
   florbl = foo [0];

   when florbl {
     record foo;
   }

   when florbl record foo + bar[10:0] as foobar;

   record baz;
   record qux as qxx;
}

cover xxx.foo {0, 12, 2047};
cover xxx.baz;
cross xxx.foo xxx.baz;
